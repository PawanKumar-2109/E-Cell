<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>History</title>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" integrity="sha512-Fo3rlrZj/k7ujTnHg4CGR2D7kSs0v4LLanw2qksYuRlEzO+tcaEPQogQ0KaoGN26/zrn20ImR1DfuLWnOo7aBA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="css/history.css">
</head>
<body>
    <div class="container">
        <h1>Deposit History</h1>
          <table class="rwd-table">
            <tbody>
              <tr>
                <th>ID</th>
                <th>From</th>
                <th>To</th>
                <th>Tokens</th>
                <th>TxHash</th>
              </tr>
              <% for(var i=0;i<deposit.length;i++){%>
                <tr>
                    <td><%= i+1%></td>
                    <td><%= deposit[i].tx.from%></td>
                    <td><%= deposit[i].tx.events.Transfer.returnValues.to%></td>
                    <td><%= deposit[i].amount%></td>
                    <td><%= deposit[i].tx.transactionHash%></td>
                </tr>
                <%}%>
            </tbody>
          </table>
        </div>

        <div class="container">
            <h1>Withdrawal History</h1>
              <table class="rwd-table">
                <tbody>
                  <tr>
                    <th>ID</th>
                    <th>From</th>
                    <th>To</th>
                    <th>Tokens</th>
                    <th>TxHash</th>
                  </tr>
                  <% for(var i=0;i<withdraw.length;i++){%>
                    <tr>
                        <td><%= i+1%></td>
                        <td><%= withdraw[i].tx.from%></td>
                        <td><%= withdraw[i].to%></td>
                        <td><%= withdraw[i].amount%></td>
                        <td><%= withdraw[i].tx.transactionHash%></td>
                    </tr>
                    <%}%>
                </tbody>
              </table>
            </div>



<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js" integrity="sha512-894YE6QWD5I59HgZOGReFYm4dnWc1Qt5NtvYSaNcOP+u1T9qYdvdihz0PPSiiqn/+/3e7Jo4EaG7TubfWGUrMQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
</body>
</html>